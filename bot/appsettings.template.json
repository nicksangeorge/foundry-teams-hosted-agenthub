{
  "TokenValidation": {
    "Enabled": true,
    "Audiences": ["${{BOT_APP_ID}}"],
    "TenantId": "${{TENANT_ID}}"
  },
  "AgentApplication": {
    "StartTypingTimer": false,
    "RemoveRecipientMention": true,
    "NormalizeMentions": true
  },
  "Connections": {
    "ServiceConnection": {
      "Settings": {
        "AuthType": "ClientSecret",
        "AuthorityEndpoint": "https://login.microsoftonline.com/${{TENANT_ID}}",
        "ClientId": "${{BOT_APP_ID}}",
        "ClientSecret": "${{BOT_APP_SECRET}}",
        "TenantId": "${{TENANT_ID}}",
        "Scopes": ["https://api.botframework.com/.default"]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ],
  "Foundry": {
    "ProjectEndpoint": "${{FOUNDRY_PROJECT_ENDPOINT}}",
    "OpsAgentName": "ContosoOpsAgent",
    "OpsAgentVersion": "1",
    "MenuAgentName": "ContosoMenuAgent",
    "MenuAgentVersion": "1",
    "OrchestratorAgentName": "ContosoOrchestratorAgent",
    "OrchestratorAgentVersion": "1",
    "VisionDeployment": "gpt-4o-mini"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ContosoAgentBot": "Trace",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
